            console.log(radio2);
            var radio3 = document.getElementById("r3" + ident);
            console.log(radio3);
            var radio4 = document.getElementById("r4" + ident);
            console.log(radio4);
            var radio5 = document.getElementById("r5" + ident);
            console.log(radio5);

            prom = votos[i].value;
            for (var j = 0; j <= prom; j++) {
                console.log(prom);
                switch (j) {
